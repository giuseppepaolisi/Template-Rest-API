{
    "env": {
      "browser": true,       // Abilita le variabili globali del browser
      "es2021": true,        // Abilita le funzionalità ECMAScript 2021
      "node": true           // Abilita le variabili globali di Node.js
    },
    "extends": [
      "eslint:recommended",  // Estende le regole raccomandate di ESLint
      "plugin:@typescript-eslint/recommended",  // Estende le regole raccomandate del plugin TypeScript di ESLint
      "plugin:prettier/recommended"  // Estende le regole di Prettier per la formattazione del codice
    ],
    "parser": "@typescript-eslint/parser",  // Specifica il parser TypeScript di ESLint
    "parserOptions": {
      "ecmaVersion": 12,  // Utilizza le funzionalità ECMAScript 2021
      "sourceType": "module"  // Abilita l'uso dei moduli ECMAScript
    },
    "plugins": [
      "@typescript-eslint",  // Plugin TypeScript per ESLint
      "prettier"  // Plugin Prettier per ESLint
    ],
    "rules": {
      "prettier/prettier": "error",  // Configura ESLint per mostrare errori di formattazione Prettier
      "@typescript-eslint/explicit-function-return-type": "off",  // Disabilita la regola che richiede la specificazione esplicita del tipo di ritorno delle funzioni
      "@typescript-eslint/no-explicit-any": "warn",  // Mostra un avviso quando viene usato il tipo `any`
      "no-console": "warn",  // Mostra un avviso quando viene usato `console.log`
      "semi": ["error", "always"]  // Impone l'uso del punto e virgola
    }
  }
  